@model IEnumerable<MonsterLoots.Models.Monsters.MonstersListItem>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p><a class="btn button" href="~/Monsters/Create">Create New</a></p>

<br />

@if (TempData.ContainsKey("SaveResult")) // Success button (When a monster has been added to the list)
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table header-text" style="font-size: 35px; color: #0316AA;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MonsterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonsterLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonsterDesc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-font">
            <td>
                @Html.DisplayFor(modelItem => item.MonsterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonsterLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonsterDesc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MonsterId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MonsterId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MonsterId })
            </td>
        </tr>
    }

</table>

<hr />

