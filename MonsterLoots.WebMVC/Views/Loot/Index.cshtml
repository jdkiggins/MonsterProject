@model IEnumerable<MonsterLoots.Models.Loot.LootListItem>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p><a class="btn button" href="~/Loot/Create">Create New</a></p>

<br />

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table header-text" style="font-size: 35px; color: #0316AA;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LootName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LootDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonsterName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-font">
            <td>
                @Html.DisplayFor(modelItem => item.LootName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LootDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonsterName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LootId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LootId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LootId })
            <td>
        </tr>
    }
</table>

<hr />
